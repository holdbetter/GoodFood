<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="RegistrationTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">
            @color/colorPrimaryRegistration
        </item>
        <item name="colorPrimaryDark">
            @color/colorPrimaryDarkRegistration
        </item>
        <item name="colorAccent">
            @color/colorPrimaryDarkRegistration
        </item>
        <item name="android:textColor">
            @color/text_hello
        </item>

    </style>

    <style name="MainTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">
            @color/colorPrimary
        </item>
        <item name="colorPrimaryDark">
            @color/colorPrimaryDark
        </item>
        <item name="colorAccent">
            @color/colorAccent
        </item>
        <item name="android:textColor">
            @color/text_hello
        </item>

        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/modal_bottom_background</item>
    </style>


    <style name="HelloFragmentDefault">
        <item name="android:paddingLeft">
            30dp
        </item>
        <item name="android:paddingRight">
            30dp
        </item>
        <item name="android:paddingBottom">
            40dp
        </item>
    </style>

    <style name="TextOnTop" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">
            @font/montserrat_semi_bold
        </item>
        <item name="android:textSize">
            28sp
        </item>
        <item name="android:textAlignment">
            center
        </item>
    </style>

    <style name="TextContent" parent="Widget.MaterialComponents.TextView">
        <item name="android:fontFamily">
            @font/montserrat_regular
        </item>
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textAlignment">
            center
        </item>
        <item name="android:paddingStart">
            10dp
        </item>
        <item name="android:paddingEnd">
            10dp
        </item>
        <item name="android:layout_marginTop">
            16dp
        </item>
    </style>

    <style name="ButtonNext" parent="Widget.AppCompat.Button">
        <item name="android:textColor">
            #00000000
        </item>
        <item name="elevation">
            0dp
        </item>
        <item name="android:background">
            @drawable/next_button_def_selector
        </item>
        <item name="android:textSize">
            18sp
        </item>
        <item name="android:fontFamily">
            @font/montserrat_medium
        </item>
    </style>

    <style name="EditTextNameSet" parent="@style/RegistrationTheme">
        <item name="android:textColor">
            @color/text_name
        </item>
        <item name="android:background">
            @drawable/edittext_shape
        </item>
        <item name="android:textSize">
            15sp
        </item>
        <item name="android:hint">
            @string/set_name_hint
        </item>
        <item name="android:gravity">
            center
        </item>
        <item name="android:text">
            ""
        </item>
        <item name="android:fontFamily">
            @font/montserrat_light
        </item>
        <item name="android:cursorVisible">
            true
        </item>
        <item name="android:textSelectHandle">
            @drawable/text_select_handle
        </item>
    </style>

    <style name="ValueEditText" parent="@style/RegistrationTheme">
        <item name="android:background">
            @null
        </item>
        <item name="android:fontFamily">
            @font/montserrat_semi_bold
        </item>
        <item name="android:textSize">
            55sp
        </item>
        <item name="android:inputType">
            number
        </item>
        <item name="android:textStyle">
            bold
        </item>
        <item name="android:textColor">
            @color/text_dafault_color
        </item>
        <item name="android:textCursorDrawable">
            @drawable/weight_cursor
        </item>
        <item name="android:textSelectHandle">
            @drawable/text_select_handle
        </item>
    </style>

    <style name="LifestyleButtonChooser" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">
            0dp
        </item>
        <item name="android:layout_height">
            63dp
        </item>
        <item name="android:paddingStart">
            30dp
        </item>
        <item name="android:elevation" tools:targetApi="lollipop">
            10dp
        </item>
        <item name="android:paddingEnd">
            30dp
        </item>
        <item name="android:background">
            @drawable/lifestyle_selector
        </item>
        <item name="android:textSize">
            15sp
        </item>
        <item name="android:fontFamily">
            @font/montserrat_light
        </item>
        <item name="android:gravity">
            center
        </item>
        <item name="android:textColor">
            @color/lifestyle_text_selector
        </item>
        <item name="android:textAllCaps">
            false
        </item>
    </style>

    <style name="CheckTextViewsItem">
        <item name="android:fontFamily">
            @font/montserrat_medium
        </item>
        <item name="android:textSize">
            16sp
        </item>
        <item name="android:textColor">
            @color/text_dafault_color
        </item>
    </style>

</resources>
