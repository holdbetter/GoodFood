<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/foodCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/eda_block_gradient"
        android:paddingHorizontal="24dp"
        app:layout_constraintBottom_toTopOf="@id/youCard"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/foodHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Еда"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/totalKkal"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:fontFamily="@font/montserrat_regular"
            android:gravity="center_vertical|end"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="@id/foodHeaderText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/foodHeaderText"
            tools:text="2100 ккал" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/startKkalProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/foodHeaderText"
            app:layout_constraintTop_toBottomOf="@id/foodHeaderText"
            tools:text="0 ккал" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/endKkalProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:gravity="end"
            app:layout_constraintRight_toRightOf="@id/totalKkal"
            app:layout_constraintTop_toBottomOf="@id/foodHeaderText"
            tools:text="2400 ккал" />

        <ProgressBar
            android:id="@+id/kkalProgress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:max="100"
            android:progressDrawable="@drawable/progress_bar_drawable"
            app:layout_constraintLeft_toLeftOf="@id/startKkalProgressText"
            app:layout_constraintRight_toRightOf="@id/endKkalProgressText"
            app:layout_constraintTop_toBottomOf="@id/startKkalProgressText"
            tools:progress="80" />

        <LinearLayout
            android:id="@+id/belki_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/startKkalProgressText"
            app:layout_constraintRight_toLeftOf="@id/zhir_layout"
            app:layout_constraintTop_toBottomOf="@id/kkalProgress">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/belkiCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                tools:text="25000" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/belkiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="белки"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/zhir_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/belki_layout"
            app:layout_constraintRight_toLeftOf="@id/ugl_layout"
            app:layout_constraintTop_toBottomOf="@id/kkalProgress">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/zhirCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                tools:text="25000" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/zhirText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="жиры"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ugl_layout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/zhir_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/kkalProgress">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/uglCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                tools:text="25000" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/uglText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat_regular"
                android:text="углеводы"
                android:textSize="12sp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/youCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/you_block_gradient"
        android:paddingHorizontal="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/waterCard"
        app:layout_constraintTop_toBottomOf="@id/foodCard"
        app:layout_constraintWidth_percent="0.43">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/youHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Ты"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dateHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="#99FFFFFF"
            android:textSize="10sp"
            app:layout_constraintLeft_toLeftOf="@id/youHeaderText"
            app:layout_constraintTop_toBottomOf="@id/youHeaderText"
            tools:ignore="SmallSp"
            tools:text="26.04" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/yesterdayWeightLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/todayWeightLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dateHeaderText">

            <FrameLayout
                android:id="@+id/minusBtn1Frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tag="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/yesterdayWeightValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/minusBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tag="1"
                    app:srcCompat="@drawable/ic_minus_empty"
                    app:tint="@color/main_home_image_color_selector" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/plusBtn1Frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tag="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/yesterdayWeightValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/plusBtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tag="1"
                    app:tint="@color/main_home_image_color_selector"
                    app:srcCompat="@drawable/ic_plus_empty" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/yesterdayWeightValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                tools:text="22.2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/yesterdayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="вчера"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/yesterdayWeightValue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/todayWeightLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/tomorrowWeightLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/yesterdayWeightLayout">

            <FrameLayout
                android:id="@+id/minusBtn2Frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tag="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/todayWeightValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/minusBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tag="2"
                    app:srcCompat="@drawable/ic_minus_empty"
                    app:tint="@color/main_home_image_color_selector" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/plusBtn2Frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tag="2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/todayWeightValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/plusBtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tag="2"
                    app:tint="@color/main_home_image_color_selector"
                    app:srcCompat="@drawable/ic_plus_empty" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/todayWeightValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                tools:text="22.2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/todayText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="сегодня"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/todayWeightValue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tomorrowWeightLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/todayWeightLayout">

            <FrameLayout
                android:id="@+id/minusBtn3Frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tag="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tomorrowWeightValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/minusBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tag="3"
                    app:srcCompat="@drawable/ic_minus_empty"
                    app:tint="@color/main_home_image_color_selector" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/plusBtn3Frame"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:tag="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toRightOf="@id/tomorrowWeightValue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.35">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/plusBtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:tag="3"
                    app:tint="@color/main_home_image_color_selector"
                    app:srcCompat="@drawable/ic_plus_empty" />

            </FrameLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tomorrowWeightValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:textSize="24sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.4"
                tools:text="22.2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tomorrowText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="цель"
                android:textSize="14sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tomorrowWeightValue" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/waterCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/water_card_selector"
        android:paddingHorizontal="24dp"
        android:paddingBottom="12dp"
        app:layout_constraintHeight_percent="0.28"
        app:layout_constraintLeft_toRightOf="@id/youCard"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/foodCard"
        app:layout_constraintWidth_percent="0.5">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/waterHeaderText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/montserrat_semi_bold"
            android:text="Вода"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <FrameLayout
            android:id="@+id/waterAddFrame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/waterHeaderText"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintWidth_percent="0.3"
            app:layout_constraintTop_toTopOf="@id/waterHeaderText">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end|center_vertical"
                app:tint="@color/main_home_image_color_selector"
                app:srcCompat="@drawable/ic_plus" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/startMlProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="@id/waterHeaderText"
            app:layout_constraintTop_toBottomOf="@id/waterHeaderText"
            tools:text="0 л" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/endMlProgressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:gravity="end"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/waterHeaderText"
            tools:text="1.5 л" />

        <ProgressBar
            android:id="@+id/mlProgress"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:progressDrawable="@drawable/progress_bar_drawable"
            app:layout_constraintLeft_toLeftOf="@id/startMlProgressText"
            app:layout_constraintRight_toRightOf="@id/endMlProgressText"
            app:layout_constraintTop_toBottomOf="@id/startMlProgressText"
            tools:progress="80" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/totalMl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="20sp"
            android:gravity="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:text="0.8 л" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/waterCard"
        app:layout_constraintRight_toRightOf="@id/waterCard"
        app:layout_constraintTop_toBottomOf="@id/waterCard">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hiTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textAlignment="center"
            android:textColor="#6d6d6d"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.30"
            tools:text="Привет,\nВилен" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/hiTextView"
            app:srcCompat="@drawable/emoji" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>